<div class="container">
    <section id="page-name">
            <iframe id="main-image" src="https://giphy.com/embed/UAXou95E6oPjW" width="480" height="326" frameBorder="0" class="giphy-embed" allowFullScreen></iframe>
            <h1>Eat-Da-Buger</h1>
    </section>

    <section class="row">
        <div class="col-md-2">&nbsp;</div>
        <div class="col-md-5">
            <table>
                {{#each burgers}}
                    {{#unless devoured}}
                        {{> burgers/burger-block}}
                    {{/unless}}
                {{/each}}
            </table>
        </div>
        <div class="col-md-3">
            {{#each burgers}}
                {{#if devoured}}
                    <div>{{id}}. {{burger_name}} 
                        {{#if eat_person}}
                            (Eaten by {{eat_person}})
                        {{/if}}
                    </div>
                {{/if}}
            {{/each}}        
        </div>
        <div class="col-md-2">&nbsp;</div>
    </section>

    <form class="create-form">
        <div class="form-group">
            <label for="name"></label>
            <textarea id="name" name="burger-name" rows="2" cols="40" placeholder="What do you want to eat?"></textarea>
        </div>
        <button type="submit">Add Burger</button>
        <button id="delete-all">Delete All Burgers</button>
    </form>     
</div>
